<div id="course-form" class="admin-section">
  <h2>Administrera kurser</h2>
  <button id="show-form-btn">Skapa ny kurs</button>

  <form id="add-course-form" style="display: none;">
    <input type="hidden" id="course-id">

    <div class="form-group">
      <label for="title">Titel:</label>
      <input type="text" id="title" name="title" required>
    </div>

    <div class="form-group">
      <label for="description">Kursinnehåll:</label>
      <textarea
      id="description" 
      name="description" 
      rows="4" 
      required
      placeholder="Skriv beskrivning... tryck Enter för ny rad"
      style="text-align: center; white-space: pre-wrap;"
      class="centered-textarea" 
      ></textarea>
    </div>

    <div class="form-group">
      <label for="weeks">Antal lektioner:</label>
      <input type="number" id="weeks" name="weeks" min="1" max="40" required>
    </div>

    <div class="form-group">
      <label for="lessonLength">Längd per lektion (minuter):</label>
      <input type="number" id="lessonLength" name="lessonLength" min="15" max="180" step="15" required>
    </div>

    <div class="form-group">
      <label for="price">Pris (kr):</label>
      <input type="number" id="price" name="price" min="0" required>
    </div>

    <div class="form-group">
      <label for="teacher">Lärare/Instruktör:</label>
      <input type="text" id="teacher" name="teacher" required>
    </div>

    <div class="form-buttons">
      <button type="submit" id="save-course-btn">Spara kurs</button>
      <button type="button" id="clear-form-btn">Rensa</button>
    </div>

  </form>
  <div id="admin-course-list">
    <h3>Aktuella kurser</h3>
    <table id="courses-table">
      <thead>
        <tr>
          <th>Titel</th>
          <th>Antal lektioner</th>
          <th>Längd (min)</th>
          <th>Pris</th>
          <th>Lärare</th>
          <th>Åtgärder</th>
        </tr>
      </thead>
      <tbody id="courses-list-body">
        <!-- Kurser laddas dynamiskt -->
        <tr>
          <td colspan="6">Laddar kurser...</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
